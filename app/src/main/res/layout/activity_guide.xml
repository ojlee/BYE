<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/frameLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"
            android:gravity="center"
            android:text="코스 안내" />

    </FrameLayout>// 최상단
    //좌우 스크롤

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/guideIBtn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="11dp"
                        android:layout_weight="1"
                        android:contentDescription="코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"
                        android:src="@drawable/guide_sym4" />


                    <ImageButton
                        android:id="@+id/guideIBtn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignStart="@+id/guideIBtn1"
                        android:layout_alignTop="@+id/guideIBtn4"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="11dp"
                        android:layout_weight="1"
                        android:contentDescription="코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"
                        android:src="@drawable/guide_sym4" />

                    <ImageButton
                        android:id="@+id/guideIBtn3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="11dp"
                        android:layout_toEndOf="@+id/guideIBtn1"
                        android:layout_weight="1"
                        android:contentDescription="코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"
                        android:src="@drawable/guide_sym4" />

                    <ImageButton
                        android:id="@+id/guideIBtn4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignTop="@+id/guideIBtn3"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="11dp"
                        android:layout_toEndOf="@+id/guideIBtn1"
                        android:layout_weight="1"
                        android:contentDescription="코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"
                        android:src="@drawable/guide_sym4" />

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="45dp"
                android:background="#EA7500" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //하단 버튼자리

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btndes1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="상세 듣기"
                    android:background="@color/colorTheme1"
                    android:textColor="@color/colorBackground"

                    />

                <Button
                    android:id="@+id/btndes2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignStart="@+id/btndes2"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="요금 정보"
                    android:background="@color/colorTheme1"
                    android:textColor="@color/colorBackground"/>

                <Button
                    android:id="@+id/btndes3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/btndes3"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="택시 호출"
                    android:background="@color/colorTheme1"
                    android:textColor="@color/colorBackground"/>
                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    //

</RelativeLayout>