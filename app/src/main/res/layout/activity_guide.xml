<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/frameLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="코스 안내"
            android:contentDescription = "코스안내 항목을 눌러 관광지에 대한 설명을 들으세요"/>

    </FrameLayout>// 최상단
    //좌우 스크롤

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="45dp"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/guide_sym"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp" />
        </RelativeLayout>

        <!--<HorizontalScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/guide_var">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">

                 <ImageButton
                     android:id="@+id/imageButton"
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:layout_weight="1"
                     app:srcCompat="@drawable/guide_sym" />
             </RelativeLayout>
         </HorizontalScrollView>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //하단 버튼자리

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btndes1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="상세 듣기"

                    />

                <Button
                    android:id="@+id/btndes2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignStart="@+id/btndes2"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="요금 정보" />

                <Button
                    android:id="@+id/btndes3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/btndes3"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:text="택시 호출" />
                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    //

</RelativeLayout>